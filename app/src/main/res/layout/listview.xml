<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_msg_merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="test"
            android:textColor="@android:color/black"
            android:textSize="@dimen/transactionMerchantTextSize"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_msg_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="39.00"
            android:textSize="@dimen/amountTextSize" />

        <TextView
            android:id="@+id/tv_msg_account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_msg_merchant"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/accountTypeTextSize" />

        <TextView
            android:id="@+id/tv_msg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_msg_amount"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/dateTextSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tv_msg_date"
            android:layout_margin="@dimen/marginDivider"
            android:background="@color/divider" />
    </RelativeLayout>


</LinearLayout>